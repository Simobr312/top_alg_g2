% Custom commands for Algebraic Topology notes

\newcommand{\nl}{\ \\}

% Common math shortcuts
\newcommand{\R}{\mathbb{R}} % Real numbers
\newcommand{\Z}{\mathbb{Z}} % Integers
\newcommand{\Q}{\mathbb{Q}} % Rational numbers
\newcommand{\C}{\mathbb{C}} % Complex numbers
\newcommand{\N}{\mathbb{N}} % Natural numbers

% Algebra-specific commands
\newcommand{\Hom}{\mathrm{Hom}} % Homomorphisms
\newcommand{\Ker}{\mathrm{Ker}} % Kernel
\newcommand{\Img}{\mathrm{Im}}  % Image
\newcommand{\id}{\mathrm{id}}   % Identity map

% Set theory
\newcommand{\set}[1]{\left\{ #1 \right\}} % Set notation
\newcommand{\abs}[1]{\left| #1 \right|}   % Absolute value
\newcommand{\norm}[1]{\left\| #1 \right\|} % Norm
\newcommand{\card}[1]{\Bigm| #1 \bigM|} % Cardinality

% Arrows
\newcommand{\toiso}{\xrightarrow{\sim}} % Isomorphism arrow
\newcommand{\into}{\hookrightarrow}    % Injection arrow
\newcommand{\onto}{\twoheadrightarrow} % Surjection arrow
\newcommand{\subgroup}{\leq}
\newcommand{\normal}{\trianglelefteq}
\newcommand{\Aut}[1]{\mathrm{Aut}\left(#1\right)} % Automorphism group

% Proof 
\newcommand{\tc}{\text{ tale che }} % Such that
\newcommand{\contradiction}{\textbf{Vorrei metterci il fulmine}} % For contradiction proofs

% General topology
\newcommand{\interior}[1]{\mathring{#1}} % Parte interna
\newcommand{\closure}[1]{\overline{#1}}  % Chiusura
\newcommand{\boundary}[1]{\partial #1} % Bordo
\newcommand{\Proj}[2]{\mathbb{P}^{#2}\left(#1\right)}

% Theorems and definitions
\newtheorem{definition}{Definizione}[section]
\newtheorem{proposition}{Proposizione}[section]
\newtheorem{theorem}{Teorema}[section]
\newtheorem{example}{Esempio}[section]
\newtheorem{remark}{Osservazione}[section]
\newtheorem{lemma}{Lemma}[section]
\newtheorem{corollary}{Corollario}[section]

% Colored text for emphasis
\newcommand{\highlight}[1]{\textcolor{blue}{#1}}


% Topological spaces
\newcommand{\Sph}[1]{S^{#1}}
\newcommand{\Disc}[1]{D^{#1}}
\newcommand{\Torus}[1]{T^{#1}}
\newcommand{\gTorus}[1]{T^{2}_{#1}}

% Metric spaces objects
\newcommand{\ball}[2]{B\left(#1, #2\right)}
\newcommand{\closedball}[2]{\bar{B}\left(#1, #2\right)}
